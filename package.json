{
  "name": "kod-markdown",
  "private": false,
  "version": "1.0.3",
  "license": "MIT",
  "author": "Yasin Torun (https://github.com/yasintorun)",
  "repository": "https://github.com/kodchallenge/kod-markdown",
  "homepage": "https://github.com/kodchallenge/kod-markdown#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "type": "module",
  "keywords": [
    "markdown",
    "react",
    "react markdown",
    "kod markdown",
    "full markdown"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/kod-markdown.umd.ts",
  "module": "./dist/kod-markdown.es.ts",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/kod-markdown.es.ts",
      "require": "./dist/kod-markdown.umd.ts"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "react-markdown": "^8.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@types/react-syntax-highlighter": "^15.5.5",
    "@vitejs/plugin-react": "^2.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^1.6.6",
    "vite-tsconfig-paths": "^3.5.2"
  },
  "peerDependencies": {
    "react-markdown": "^8.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^3.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  }
}